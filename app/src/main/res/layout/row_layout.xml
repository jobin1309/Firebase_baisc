<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/EmpName"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EmpEmail"
        android:layout_width="99dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/EmpName"
        app:layout_constraintTop_toTopOf="@+id/EmpName" />

    <TextView
        android:id="@+id/EmpAge"
        android:layout_width="97dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/EmpEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/EmpEmail" />
</androidx.constraintlayout.widget.ConstraintLayout>